/* pages/index/index.wxss */
.menu {
  display: flex;
  justify-content: center;
}
.menu-btn {
  height: 30px;
  line-height: 30px;
  width: 50%;
  text-align: center;
  padding: 5px;
  background: #f09135;
  color: #fff;
}
.menu-btn:first-child {
  border-right: 1px solid #fff;
}
.active {
  font-size: 18px;
  font-weight: bold;
}
.activity-list {
  padding-bottom: 70px;
}
.create-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  height: 60px;
  line-height: 60px;
  background: #f09135;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
}

.no-result {
  font-size: 18px;
  text-align: center;
  color: #999;
  margin-top: 30%;
}

.activity-card {
  margin: 10px 10px 15px;
  background: #fff;
  border-radius: 5px;
  box-shadow: 0 0 5px #f0987b;
  padding: 20px 10px 5px 20px;
  color: #fff;
  position: relative;
  background: #f0987b; /* 标准的语法 */
}

.activity-title {
  font-size: 18px;
  font-weight: bold;
}

.activity-time {
  font-size: 14px;
  margin: 5px 0;
}

.activity-content {
  font-size: 14px;
  margin-bottom: 10px;
}

.bottom-bar {
  display: flex;
  justify-content: space-between;
  height: 40px;
  font-size: 18px;
  align-items: center;
}

.share-btn {
  width: 30px;
  height: 30px;
  
  background: url('data:image/png;base64,') center no-repeat;
  background-size: 25px 25px;
}

button {
  border-radius: 0;
  border: none;
  outline: none;
  display: block;
  margin: 0;
}

button::after {
    border-radius: 0;
    border: none;
}